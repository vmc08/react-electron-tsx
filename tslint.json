{
  "defaultSeverity": "error",
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [100]
    },
    "member-access": false,
    "ordered-imports": false,
    "new-parens": true,
    "no-arg": true,
    "no-shadowed-variable": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "quotemark": [true, "single", "jsx-double"],
    "no-irregular-whitespace": true,
    "indent": [true, "spaces", 2],
    "semicolon": [true, "always", "ignore-interfaces"],
    "no-console": {
      "severity": "warning"
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "jsRules": {},
  "linterOptions": {
    "exclude": [
      "public/*.ts",
      "src/serviceWorker.ts"
    ]
  }
}
